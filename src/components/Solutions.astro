---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentUrl = Astro.url.pathname;

const getNavLink = (anchor: string) => {
  const basePath = lang === "es" ? "/es/" : "/";
  return currentUrl === basePath ? `#${anchor}` : `${basePath}#${anchor}`;
};
---

<section id="Solutions" class="bg-[#F5FFE5] py-24">
  <div class="container flex justify-center mx-auto">
    <img src="/images/horario.webp" alt={t("solutions.scheduleAlt")} />
  </div>

  <div class="container py-8 mx-auto text-center md:py-16">
    <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
      <h3
        class="px-4 mb-4 text-lg text-center text-gray-500 md:px-24 md:text-2xl"
      >
        {t("solutions.description")}
      </h3>
    </div>

    <div class="css-0" style="animation-delay: 700ms; opacity: 0;">
      <a href={getNavLink("Booking")}>
        <button
          class="bg-[#87D717] hover:bg-[#95F50E] text-lg md:text-xl text-white font-bold py-2 md:py-3 px-12 md:px-20 mt-4 md:mt-5 rounded-full cursor-pointer"
        >
          {t("solutions.ctaButton")}
        </button>
      </a>
    </div>

    <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
      <h3
        class="py-4 mb-4 text-lg text-center text-gray-500 md:py-8 md:text-2xl"
      >
        {t("solutions.contactText")}
      </h3>
    </div>

    <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
      <h1
        class="px-4 py-8 mb-4 text-3xl font-bold text-center text-black md:text-4xl"
      >
        {t("solutions.title")}
      </h1>
    </div>

    <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
      <h2
        class="text-center py-2 text-[#9DC216] font-bold text-xl md:text-2xl ml-2 mr-2"
      >
        {t("solutions.subtitle1")}
      </h2>
    </div>

    <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
      <h3 class="text-center py-2 text-[#9DC216] text-xl md:text-2xl">
        {t("solutions.subtitle2")}
      </h3>
    </div>
  </div>
</section>

<div class="react-parallax" style="position: relative; overflow: hidden;">
  <div
    class="w-[100%] h-[100px] bg-[url('/images/silla.jpg')] bg-cover bg-center bg-no-repeat bg-fixed"
  >
  </div>
</div>
