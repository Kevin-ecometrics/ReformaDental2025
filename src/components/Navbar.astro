---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentUrl = Astro.url.pathname;
---

<nav class="bg-white p-4 sticky top-0 z-50">
  <div class="container mx-auto">
    <div class="flex items-center justify-between">
      <img
        src="/images/logo.webp"
        alt="Logo"
        class="flex justify-start w-8 h-8 ml-4 mr-2"
      />

      <div class="flex items-center justify-center w-full lg:w-center">
        <a
          href={currentUrl === "/" ? "#Home" : "/#Home"}
          class="hidden text-black hover:text-green-300 lg:inline-block"
          >{t("nav.home")}</a
        >
        <a
          href={currentUrl === "/" ? "#Mission" : "/#Mission"}
          class="hidden ml-4 text-black hover:text-green-300 lg:inline-block"
          >{t("nav.mision")}</a
        >
        <a
          href={currentUrl === "/" ? "#Solutions" : "/#Solutions"}
          class="hidden ml-4 text-black hover:text-green-300 lg:inline-block"
          >{t("nav.soluciones")}</a
        >
        <a
          href="/tratamientos"
          class="hidden ml-4 text-black hover:text-green-300 lg:inline-block"
          >{t("nav.tratamientos")}</a
        >
        <a
          href={currentUrl === "/" ? "#Booking" : "/#Booking"}
          class="hidden ml-4 text-black hover:text-green-300 lg:inline-block"
          >{t("nav.reservar")}</a
        >
        <a
          href="/contacto"
          class="hidden ml-4 text-black hover:text-green-300 lg:inline-block"
          >{t("nav.contacto")}</a
        >

        <a
          href="https://api.whatsapp.com/send?phone=+16195861436&text=Hola,%20visite%20su%20pagina%20y%20quisiera%20conocer%20m%C3%A1s%20sobre%20sus%20servicios%20dentales"
          target="_blank"
          rel="noreferrer"
        >
          <button
            class="hidden lg:inline-block select-none items-center gap-4 ml-16 mr-4 rounded-lg border border-green-700 py-1 px-2 text-center align-middle font-sans text-sm font-bold uppercase text-blue-gray-500 transition-all hover:opacity-75 focus:ring focus:ring-blue-gray-200 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
            type="button"
            data-ripple-dark="true"
          >
            <div class="flex justify-center items-center gap-2">
              <svg
                aria-hidden="true"
                focusable="false"
                data-prefix="fab"
                data-icon="whatsapp"
                class="svg-inline--fa fa-whatsapp w-8 h-8"
                role="img"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 448 512"
              >
                <path
                  fill="currentColor"
                  d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
                ></path>
              </svg>
              {t("nav.whatsapp")}
            </div>
          </button>
        </a>

        <div class="w-36">
          <div class="relative w-36">
            {
              currentUrl === "/" ? (
                <a
                  href="/es"
                  class="block w-full py-2 pl-8 pr-3 text-base border border-green-700 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                >
                  English
                  <span class="absolute left-2">
                    <img src="/images/USA.png" alt="flag" class="w-5 h-5" />
                  </span>
                </a>
              ) : (
                <a
                  href="/"
                  class="block w-full py-2 pl-8 pr-3 text-base border border-green-700 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                >
                  Espa√±ol
                  <span class="absolute left-2">
                    <img src="/images/Mexico.png" alt="flag" class="w-5 h-5" />
                  </span>
                </a>
              )
            }
          </div>
        </div>
      </div>

      <div class="ml-2 lg:hidden">
        <button
          class="text-black cursor-pointer hover:text-green-300 focus:outline-none"
        >
          <svg
            aria-hidden="true"
            focusable="false"
            data-prefix="fas"
            data-icon="bars"
            class="svg-inline--fa fa-bars"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 448 512"
          >
            <path
              fill="currentColor"
              d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</nav>
