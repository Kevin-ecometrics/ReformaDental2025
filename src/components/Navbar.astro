<script is:inline>
  // Funci√≥n para manejar el men√∫ m√≥vil
  function setupMobileMenu() {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileMenuBackdrop = document.getElementById("mobile-menu-backdrop");
    const mobileMenuPanel = document.getElementById("mobile-menu-panel");

    function openMenu() {
      // Activar el men√∫
      mobileMenu.classList.remove("pointer-events-none");

      // Animaciones en paralelo
      mobileMenu.classList.remove("opacity-0");
      mobileMenuBackdrop.classList.remove("opacity-0");
      mobileMenuPanel.classList.remove("translate-x-full");

      // Bloquear scroll
      document.body.style.overflow = "hidden";
    }

    function closeMenu() {
      // Iniciar animaci√≥n de salida
      mobileMenuBackdrop.classList.add("opacity-0");
      mobileMenuPanel.classList.add("translate-x-full");
      mobileMenu.classList.add("opacity-0");

      // Desactivar interacci√≥n despu√©s de la animaci√≥n
      setTimeout(() => {
        mobileMenu.classList.add("pointer-events-none");
        document.body.style.overflow = "";
      }, 500); // Duraci√≥n debe coincidir con la CSS
    }

    // Event listeners
    if (mobileMenuButton) mobileMenuButton.addEventListener("click", openMenu);
    if (mobileMenuClose) mobileMenuClose.addEventListener("click", closeMenu);
    if (mobileMenuBackdrop)
      mobileMenuBackdrop.addEventListener("click", closeMenu);

    // Cerrar al hacer clic en enlaces (con retraso para ver la animaci√≥n)
    const menuLinks = mobileMenu?.querySelectorAll("nav a");
    menuLinks?.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const href = link.getAttribute("href");
        closeMenu();
        setTimeout(() => {
          window.location.href = href;
        }, 400);
      });
    });
  }

  // Inicializaci√≥n
  document.addEventListener("DOMContentLoaded", setupMobileMenu);
  document.addEventListener("astro:after-swap", setupMobileMenu);
</script>
