---
const { URL } = Astro.props;
---

<section
  id="home"
  class="h-screen w-full bg-[url('https://molarhouse.com/wp-content/uploads/2022/02/MH-WALK-1.jpg')] bg-cover bg-center bg-no-repeat flex flex-col items-center justify-center relative snap-center overflow-hidden"
  aria-label="Reforma Dental - Especialistas en All on 4"
>
  <!-- Overlay con gradiente dinámico -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Sistema de partículas -->
  <div class="absolute inset-0 particles-container">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
    <div class="particle particle-6"></div>
    <div class="particle particle-7"></div>
    <div class="particle particle-8"></div>
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 text-center text-white p-8 max-w-6xl mx-auto">
    <div class="mb-6 animate-fade-in-up">
      <div
        class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-8"
      >
        <span class="text-sm font-medium tracking-wider text-blue-200"
          >✨ {
            URL
              ? "Smile is the best option for your dental health"
              : "Sonrie es la mejor opción para tu salud dental"
          } ✨
        </span>
      </div>
    </div>

    <h1
      class="text-4xl md:text-6xl lg:text-8xl font-black uppercase mb-6 animate-title-glow"
    >
      <span
        class="block bg-gradient-to-r from-white via-[#87d717] to-white bg-clip-text text-transparent"
      >
        <!-- separar texto en JS/JSX y renderizar -->
        Reforma Dental
      </span>
      <span
        class="block text-2xl md:text-4xl lg:text-5xl mt-4 text-[#87d717] font-light tracking-widest animate-pulse-slow"
      >
        All on 4
      </span>
    </h1>

    <div
      class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-12 animate-fade-in-up-delay"
    >
      <a
        href="#about"
        class="group px-8 py-4 bg-principal rounded-full font-semibold transition-transform duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-blue-500/25"
      >
        <span class="flex items-center gap-2">
          {
            URL
              ? "Learn more about All on 4 Implants"
              : "Conoce mas sobre los implantes All on 4"
          }

          <svg
            class="w-5 h-5 transition-transform group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </span>
      </a>

      <a
        href="#success"
        class="group px-8 py-4 border-2 border-white/30 hover:border-white/60 rounded-full font-semibold transition-transform duration-300 cursor-pointer transform hover:scale-105 backdrop-blur-sm hover:bg-white/10"
      >
        <span class="flex items-center gap-2">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          {URL ? "View Case Studies" : "Ver Casos de Éxito"}
        </span>
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes titleGlow {
    0%,
    100% {
      text-shadow:
        0 0 10px rgba(255, 255, 255, 0.5),
        0 0 20px rgba(157, 194, 22, 0.3),
        0 0 30px rgba(157, 194, 22, 0.2);
    }
    50% {
      text-shadow:
        0 0 20px rgba(255, 255, 255, 0.7),
        0 0 30px rgba(135, 215, 23, 0.5),
        0 0 40px rgba(135, 215, 23, 0.4);
    }
  }

  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  /* Animaciones para partículas */

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
      opacity: 0.8;
    }
  }

  @keyframes drift {
    0% {
      transform: translateX(0px);
    }
    100% {
      transform: translateX(100vw);
    }
  }

  .particle {
    @apply absolute rounded-full;
    width: 4px;
    height: 4px;
    background: radial-gradient(
      circle,
      #87d717 0%,
      rgba(147, 197, 253, 0.4) 70%,
      transparent 100%
    );
    animation:
      float 6s ease-in-out infinite,
      drift 15s linear infinite;
  }

  /* Partículas específicas con tamaños y delays */
  .particle-1 {
    top: 20%;
    left: -10px;
    animation-delay: 0s, 0s;
    animation-duration: 4s, 12s;
  }

  .particle-2 {
    top: 40%;
    left: -10px;
    animation-delay:
      -2s,
      -3s;
    animation-duration: 5s, 14s;
    width: 6px;
    height: 6px;
  }

  .particle-3 {
    top: 60%;
    left: -10px;
    animation-delay:
      -4s,
      -6s;
    animation-duration: 3s, 16s;
  }

  .particle-4 {
    top: 80%;
    left: -10px;
    animation-delay:
      -1s,
      -2s;
    animation-duration: 6s, 13s;
    width: 3px;
    height: 3px;
  }

  .particle-5 {
    top: 10%;
    left: -10px;
    animation-delay:
      -3s,
      -8s;
    animation-duration: 4.5s, 18s;
    width: 5px;
    height: 5px;
  }

  .particle-6 {
    top: 70%;
    left: -10px;
    animation-delay:
      -5s,
      -1s;
    animation-duration: 3.5s, 11s;
  }

  .particle-7 {
    top: 30%;
    left: -10px;
    animation-delay:
      -6s,
      -4s;
    animation-duration: 5.5s, 15s;
    width: 7px;
    height: 7px;
  }

  .particle-8 {
    top: 50%;
    left: -10px;
    animation-delay:
      -2.5s,
      -7s;
    animation-duration: 4s, 17s;
    width: 2px;
    height: 2px;
  }

  /* Animaciones aplicadas via clases */
  .animate-fade-in-up {
    animation: fadeInUp 1s ease-out forwards;
  }

  .animate-fade-in-up-delay {
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }

  .animate-title-glow {
    animation: titleGlow 3s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulseSlow 4s ease-in-out infinite;
  }

  /* Responsive: ocultar partículas en móvil */
  @media (max-width: 768px) {
    .particle {
      display: none;
    }
  }
</style>
