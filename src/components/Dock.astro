<style>
  @keyframes dock-bounce {
    0%,
    100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-12px) scale(1.1);
    }
  }

  @keyframes dock-glow {
    0%,
    100% {
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }
    50% {
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    }
  }

  .dock-container {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    animation: dock-glow 4s ease-in-out infinite;
  }

  .dock-item {
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    transform-origin: bottom center;
  }

  .dock-icon {
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
  }

  .dock-icon::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transform: translateX(-100%);
    transition: transform 0.6s;
  }

  .dock-item:hover .dock-icon::before {
    transform: translateX(100%);
  }

  .dock-item:hover {
    animation: dock-bounce 0.6s ease-out;
  }

  .dock-item:hover .dock-icon {
    transform: scale(1.2) translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  /* Efecto de escalado de iconos vecinos */
  .dock-container:hover .dock-item:not(:hover) .dock-icon {
    transform: scale(0.9);
  }

  /* Tooltips estilo macOS */
  .tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 12px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .tooltip::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 4px solid transparent;
    border-top-color: rgba(0, 0, 0, 0.8);
  }

  .dock-item:hover .tooltip {
    opacity: 1;
    transform: translateX(-50%) translateY(-12px);
  }

  /* Animación de entrada */
  .dock-container {
    animation: dock-glow 4s ease-in-out infinite;
  }

  .dock-item:nth-child(1) {
    animation-delay: 0.1s;
  }
  .dock-item:nth-child(2) {
    animation-delay: 0.2s;
  }
  .dock-item:nth-child(3) {
    animation-delay: 0.3s;
  }
  .dock-item:nth-child(4) {
    animation-delay: 0.4s;
  }
  .dock-item:nth-child(5) {
    animation-delay: 0.5s;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .dock-icon {
      width: 3rem;
      height: 3rem;
    }

    .dock-container {
      padding: 0.5rem 1rem;
    }
  }
</style>
