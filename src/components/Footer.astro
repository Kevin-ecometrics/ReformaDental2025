---
import Modal from "../components/Modal.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="w-full p-4 bg-white md:p-8">
  <div
    class="flex flex-col items-center justify-center gap-6 text-center bg-white md:flex-row md:justify-between"
  >
    <a href={lang === "es" ? "/es" : "/"}>
      <img src="/images/logo.webp" alt="logo-ct" class="w-10" />
    </a>

    <ul class="flex flex-wrap items-center gap-2 md:gap-8">
      <li>
        <button
          onclick="window.openModal('aboutModal')"
          class="text-blue-gray-900 hover:text-green-300 transition-colors"
        >
          {t("footer.about")}
        </button>
      </li>

      <li>
        <button
          onclick="window.openModal('termsModal')"
          class="text-blue-gray-900 hover:text-green-300 transition-colors"
        >
          {t("footer.terms")}
        </button>
      </li>

      <li>
        <button
          onclick="window.openModal('privacyModal')"
          class="text-blue-gray-900 hover:text-green-300 transition-colors"
        >
          {t("footer.privacy")}
        </button>
      </li>

      <li>
        <a
          href="/contacto"
          class="block antialiased font-sans text-base leading-relaxed text-blue-gray-900 font-normal cursor-pointer transition-colors hover:text-green-300 focus:text-green-300"
          >{t("footer.contact")}</a
        >
      </li>
      <li>
        <a
          href="/#Booking"
          class="block antialiased font-sans text-base leading-relaxed text-blue-gray-900 font-normal cursor-pointer transition-colors hover:text-green-300 focus:text-green-300"
          >{t("footer.booking")}</a
        >
      </li>
    </ul>
  </div>

  <hr class="my-4 md:my-8 border-blue-gray-50" />

  <a
    href="https://www.e-commetrics.com/"
    target="_blank"
    rel="noopener noreferrer"
    class="block antialiased font-sans text-base leading-relaxed text-blue-gray-900 font-normal text-center transition-colors hover:text-green-300 focus:text-green-300"
  >
    {t("footer.rights")}
  </a>

  <Modal id="aboutModal" title={String(t("modal.about.title"))}>
    <div class="prose max-w-none">
      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h3 class="text-2xl font-bold text-green-600 mb-4">
            {t("footer.historia")}
          </h3>
          <p class="text-gray-700">
            {t("footer.karendesc")}
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-green-50 p-6 rounded-lg border border-green-100">
            <h4 class="text-xl font-semibold text-green-700 mb-3">
              <span
                class="inline-block w-6 h-6 bg-green-100 text-green-700 rounded-full text-center mr-2"
                >{t("footer.1")}</span
              >
              {t("footer.namekaren")}
            </h4>
            <ul class="list-disc pl-6 space-y-2 text-gray-700">
              <li>
                {t("footer.karen1")}
              </li>
              <li>{t("footer.karen2")}</li>
              <li>{t("footer.karen3")}</li>
            </ul>
          </div>

          <div class="bg-green-50 p-6 rounded-lg border border-green-100">
            <h4 class="text-xl font-semibold text-green-700 mb-3">
              <span
                class="inline-block w-6 h-6 bg-green-100 text-green-700 rounded-full text-center mr-2"
                >{t("footer.2")}</span
              >
              {t("footer.namemanuel")}
            </h4>
            <ul class="list-disc pl-6 space-y-2 text-gray-700">
              <li>{t("footer.manu1")}</li>
              <li>{t("footer.manu2")}</li>
              <li>{t("footer.manu3")}</li>
            </ul>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h3 class="text-2xl font-bold text-green-600 mb-4">
            {t("footer.nuestraclinica")}
          </h3>
          <div class="space-y-4 text-gray-700">
            <p>
              {t("footer.nuestraclinicadesc")}
            </p>

            <div class="grid md:grid-cols-2 gap-4 mt-4">
              <div class="border-l-4 border-green-500 pl-4">
                <h5 class="font-semibold text-green-700">
                  {t("footer.infraestructura")}
                </h5>
                <ul class="list-disc pl-5 space-y-1 mt-2 text-gray-700">
                  <li>{t("footer.infraestructuradesc1")}</li>
                  <li>{t("footer.infraestructuradesc2")}</li>
                  <li>{t("footer.infraestructuradesc3")}</li>
                </ul>
              </div>
              <div class="border-l-4 border-green-500 pl-4">
                <h5 class="font-semibold text-green-700">
                  {t("footer.equipo")}
                </h5>
                <ul class="list-disc pl-5 space-y-1 mt-2 text-gray-700">
                  <li>{t("footer.equipo1")}</li>
                  <li>{t("footer.equipo2")}</li>
                  <li>{t("footer.equipo3")}</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-green-50 p-6 rounded-lg border border-green-100">
          <h3 class="text-2xl font-bold text-green-700 mb-4">
            {t("footer.tecnologia")}
          </h3>
          <div class="space-y-3 text-gray-700">
            <p>{t("footer.desc")}</p>
            <ul class="list-disc pl-6 space-y-2">
              <li>{t("footer.desc1")}</li>
              <li>{t("footer.desc2")}</li>
              <li>{t("footer.desc3")}</li>
              <li>{t("footer.desc4")}</li>
            </ul>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h3 class="text-2xl font-bold text-green-600 mb-4">
            {t("footer.comopromiso")}
          </h3>
          <div class="space-y-4 text-gray-700">
            <p>{t("footer.compromisodesc")}</p>

            <div class="grid md:grid-cols-2 gap-4 mt-3">
              <div class="bg-green-50 p-4 rounded-lg">
                <h5 class="font-semibold flex items-center text-green-700">
                  <svg
                    class="w-5 h-5 mr-2 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    ></path>
                  </svg>
                  {t("footer.becas")}
                </h5>
                <p class="mt-2 text-sm text-gray-700">
                  {t("footer.estudiantes")}
                </p>
              </div>
              <div class="bg-green-50 p-4 rounded-lg">
                <h5 class="font-semibold flex items-center text-green-700">
                  <svg
                    class="w-5 h-5 mr-2 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
                    ></path>
                  </svg>
                  {t("footer.atencion")}
                </h5>
                <p class="mt-2 text-sm text-gray-700">
                  {t("footer.serviciosgratituo")}
                </p>
              </div>
            </div>
          </div>
        </div>

        <div
          class="bg-green-50 text-white p-6 rounded-lg border border-green-100"
        >
          <h3 class="text-2xl font-bold text-green-700 mb-3">
            {t("footer.vision")}
          </h3>
          <p class="text-gray-700">
            {t("footer.visiondesc")}
          </p>
        </div>
      </div>
    </div>
  </Modal>

  <Modal id="termsModal" title={t("footer.terms")}>
    <div class="prose max-w-none">
      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-2 rounded-full mr-3">
              <svg
                class="w-6 h-6 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-green-700">
              {t("footer.politica")}
            </h3>
          </div>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            <li>
              {t("footer.politica1")}
            </li>
            <li>
              {t("footer.politica2")}
            </li>
            <li>
              {t("footer.politica3")}
            </li>
            <li>
              {t("footer.politica4")}
            </li>
            <li>
              {t("footer.politica5")}
            </li>
          </ul>
        </div>

        <div class="bg-green-50 p-6 rounded-lg border border-green-100">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-2 rounded-full mr-3">
              <svg
                class="w-6 h-6 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-green-700">
              {t("footer.cancelacion")}
            </h3>
          </div>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            <li>
              {t("footer.cancelacion1")}
            </li>
            <li>
              {t("footer.cancelacion2")}
            </li>
            <li>
              {t("footer.cancelacion3")}
            </li>
            <li>
              {t("footer.cancelacion4")}
            </li>
          </ul>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 p-2 rounded-full mr-3">
              <svg
                class="w-6 h-6 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-green-700">
              {t("footer.reembolso")}
            </h3>
          </div>
          <div class="space-y-4 text-gray-700">
            <p>
              {t("footer.reembolso1")}<a
                href="mailto:mydentist@dentalreforma.com"
                class="text-green-600 hover:underline font-medium"
                >{t("footer.reembolso2")}</a
              >{t("footer.reembolso3")}
            </p>
            <ul class="list-disc pl-6 space-y-2">
              <li>{t("footer.reembolso4")}</li>
              <li>{t("footer.reembolso5")}</li>
              <li>{t("footer.reembolso6")}</li>
            </ul>
            <div
              class="bg-yellow-50 p-3 rounded-lg border-l-4 border-yellow-400 mt-4"
            >
              <p class="text-sm text-yellow-800 flex items-start">
                <svg
                  class="w-4 h-4 mt-0.5 mr-2 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <span>{t("footer.reembolso7")}</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Modal>

  <Modal id="privacyModal" title={t("footer.privacy")}>
    <div class="prose max-w-none">
      <div class="space-y-6">
        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h3 class="text-2xl font-bold text-green-600 mb-4">
            {t("footer.protecciondedatos")}
          </h3>
          <p class="text-gray-700">
            {t("footer.protecciondedatos1")}
          </p>
        </div>

        <div class="bg-green-50 p-6 rounded-lg border border-green-100">
          <h4 class="text-xl font-semibold text-green-700 mb-3">
            {t("footer.infosrecopilada")}
          </h4>
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <h5 class="font-medium text-green-700 mb-2">
                {t("footer.comunicaciones")}
              </h5>
              <ul class="list-disc pl-6 space-y-1 text-gray-700">
                <li>{t("footer.comunicaciones1")}</li>
                <li>{t("footer.comunicaciones2")}</li>
                <li>{t("footer.comunicaciones3")}</li>
                <li>{t("footer.comunicaciones4")}</li>
                <li>{t("footer.comunicaciones5")}</li>
              </ul>
            </div>
            <div>
              <h5 class="font-medium text-green-700 mb-2">
                {t("footer.registro")}
              </h5>
              <ul class="list-disc pl-6 space-y-1 text-gray-700">
                <li>{t("footer.registro1")}</li>
                <li>{t("footer.registro2")}</li>
                <li>{t("footer.registro3")}</li>
                <li>{t("footer.registro4")}</li>
                <li>{t("footer.registro5")}</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h4 class="text-xl font-semibold text-green-700 mb-3">
            {t("footer.cookies")}
          </h4>
          <div class="space-y-3 text-gray-700">
            <p>{t("footer.cookies1")}</p>
            <ul class="list-disc pl-6 space-y-2">
              <li>{t("footer.cookies2")}</li>
              <li>{t("footer.cookies3")}</li>
              <li>{t("footer.cookies4")}</li>
            </ul>

            <div class="bg-green-50 p-3 rounded-lg mt-4">
              <h5 class="font-medium text-green-700 mb-1">
                {t("footer.cookiesterceros")}
              </h5>
              <p class="text-sm text-gray-700">
                {t("footer.google")}
                <a
                  href="https://policies.google.com/technologies/ads"
                  class="text-green-600 hover:underline break-all"
                  target="_blank"
                >
                  {t("footer.googlelink")}
                </a>
              </p>
            </div>
          </div>
        </div>

        <div class="bg-green-50 p-6 rounded-lg border border-green-100">
          <h4 class="text-xl font-semibold text-green-700 mb-3">
            {t("footer.publicidad")}
          </h4>
          <div class="space-y-3 text-gray-700">
            <p>{t("footer.publicidad1")}</p>
            <ul class="list-disc pl-6 space-y-2">
              <li>{t("footer.publicidad2")}</li>
              <li>{t("footer.publicidad3")}</li>
            </ul>
            <p
              class="mt-3 text-sm bg-white p-2 rounded border border-green-100"
            >
              {t("footer.publicidad4")}
            </p>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border border-green-100">
          <h4 class="text-xl font-semibold text-green-700 mb-3">
            {t("footer.derechos")}
          </h4>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            <li>{t("footer.derechos1")}</li>
            <li>{t("footer.derechos2")}</li>
            <li>{t("footer.derechos3")}</li>
            <li>{t("footer.derechos4")}</li>
          </ul>
          <p class="mt-4 text-green-700">
            {t("footer.derechosejercer")}
            <a
              href="mailto:privacidad@reformadental.com"
              class="text-green-700 hover:underline"
            >
              {t("footer.privacidad")}
            </a>
          </p>
        </div>
      </div>
    </div>
  </Modal>
</footer>
