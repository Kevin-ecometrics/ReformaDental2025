---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="react-parallax" style="position: relative; overflow: hidden;">
  <section id="Mission" class="py-24 bg-gray-100">
    <div class="container mx-auto text-center">
      <div class="css-0" style="animation-delay: 700ms; opacity: 0;">
        <p class="mb-10 text-4xl font-bold text-black">
          {t("mission.title")}
        </p>
      </div>

      <div class="css-0" style="animation-delay: 700ms; opacity: 0;">
        <p class="text-[#9DC216] text-3xl font-bold mb-4 mr-4 ml-4">
          {t("mission.subtitle")}
        </p>
      </div>

      <div class="css-0" style="animation-delay: 700ms; opacity: 0;">
        <p class="text-[#9DC216] text-3xl mb-4">
          {t("mission.description")}
        </p>
      </div>

      <div class="css-0" style="animation-delay: 700ms; opacity: 0;">
        <div class="grid grid-cols-1 gap-4 py-8 sm:grid-cols-2">
          <div class="flex flex-row items-start">
            <img
              src="/images/Imagen profesionalismo.svg"
              class="w-24 h-24 mr-4 sm:h-32 sm:w-32"
              alt={t("mission.professionalism.alt")}
            />
            <div class="flex flex-col">
              <h1
                class="px-4 text-xl font-bold text-left text-black sm:text-2xl"
              >
                {t("mission.professionalism.title")}
              </h1>
              <h2 class="px-4 text-justify">
                {t("mission.professionalism.text")}
              </h2>
            </div>
          </div>

          <div class="flex flex-row items-start">
            <img
              src="/images/smile.svg"
              class="w-24 h-24 mr-4 sm:h-32 sm:w-32"
              alt={t("mission.smile.alt")}
            />
            <div class="flex flex-col">
              <h1
                class="px-4 text-xl font-bold text-left text-black sm:text-2xl"
              >
                {t("mission.smile.title")}
              </h1>
              <h2 class="px-4 text-justify">
                {t("mission.smile.text")}
              </h2>
            </div>
          </div>
        </div>
      </div>

      <div class="css-0" style="animation-delay: 0ms; opacity: 0;">
        <div class="grid grid-cols-1 gap-4 py-4 sm:grid-cols-2">
          <div class="flex flex-row items-start">
            <img
              src="/images/Technology.svg"
              class="w-24 h-24 mr-4 sm:h-32 sm:w-32"
              alt={t("mission.technology.alt")}
            />
            <div class="flex flex-col">
              <h1
                class="px-4 text-xl font-bold text-left text-black sm:text-2xl"
              >
                {t("mission.technology.title")}
              </h1>
              <h2 class="px-4 text-justify">
                {t("mission.technology.text")}
              </h2>
            </div>
          </div>

          <div class="flex flex-row items-start">
            <img
              src="/images/experience.svg"
              class="w-24 h-24 mr-4 sm:h-32 sm:w-32"
              alt={t("mission.experience.alt")}
            />
            <div class="flex flex-col">
              <h1
                class="px-4 text-xl font-bold text-left text-black sm:text-2xl"
              >
                {t("mission.experience.title")}
              </h1>
              <h2 class="px-4 text-justify">
                {t("mission.experience.text")}
              </h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
