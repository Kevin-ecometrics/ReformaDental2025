---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="Contacto | Reforma Dental"
  description="Contacta a Reforma Dental para agendar una cita o resolver tus dudas"
>
  <main class="container mx-auto px-4 py-12 md:py-24">
    <section
      class="grid grid-cols-1 md:grid-cols-2 gap-8 py-8 border-t border-green-200"
    >
      <div
        class="font-poppins font-light animate-fade-right animate-duration-[2000ms]"
      >
        <h1 class="text-3xl text-green-500 font-medium">
          {t("contact.contactInfo")}
        </h1>
        <p class="my-4 text-justify">
          {t("contact.description")}
        </p>
        <a
          href={t("contact.whatsappLink")}
          target="_blank"
          rel="noreferrer"
          class="inline-block bg-green-500 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors"
        >
          {t("contact.contactButton")}
        </a>
      </div>

      <!-- Sección de Ubicación -->
      <div class="font-poppins animate-fade-left animate-duration-[2000ms]">
        <h1 class="text-3xl text-green-500 font-medium">
          {t("contact.location")}
        </h1>
        <div class="flex flex-col space-y-4 my-4">
          <div class="flex items-center">
            <svg
              class="inline-block mr-2 text-green-500"
              stroke="currentColor"
              fill="currentColor"
              stroke-width="0"
              viewBox="0 0 384 512"
              height="1em"
              width="1em"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"
              ></path>
            </svg>
            <span>{t("contact.address")}</span>
          </div>
          <div class="flex items-center">
            <svg
              class="inline-block mr-2 text-green-500"
              stroke="currentColor"
              fill="currentColor"
              stroke-width="0"
              viewBox="0 0 512 512"
              height="1em"
              width="1em"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"
              ></path>
            </svg>
            <span>{t("contact.phone")}</span>
          </div>
        </div>
        <div class="relative h-0 mt-4" style="padding-bottom: 56.25%;">
          <iframe
            class="absolute top-0 left-0 w-full h-full"
            src={t("contact.mapEmbedUrl")}
            title={t("contact.mapTitle")}
            allowfullscreen></iframe>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
