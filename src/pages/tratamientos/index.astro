---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/Navbar.astro";

// Define los tratamientos aquí en el frontmatter
const tratamientos = [
  {
    slug: "corona",
    nombre: "Corona",
    precio: "$300",
    imagen: "/images/corona.webp",
    descripcion: "Restauración dental que cubre un diente dañado",
  },
  {
    slug: "dentadura",
    nombre: "Dentadura",
    precio: "$700",
    imagen: "/images/dentadura.webp",
    descripcion: "Prótesis removible para reemplazar dientes faltantes",
  },
  {
    slug: "endodoncia",
    nombre: "Endodoncia",
    precio: "$300",
    imagen: "/images/endodoncia.webp",
    descripcion: "Tratamiento del conducto radicular",
  },
  {
    slug: "extracion",
    nombre: "Extracción",
    precio: "$150",
    imagen: "/images/extracion.webp",
    descripcion: "Remoción de dientes dañados o problemáticos",
  },
  {
    slug: "implantes",
    nombre: "Implantes",
    precio: "$1650",
    imagen: "/images/implantes.webp",
    descripcion: "Reemplazo permanente con raíces artificiales",
  },
  {
    slug: "tratamiento",
    nombre: "Tratamiento",
    precio: "$50",
    imagen: "/images/tratamiento.webp",
    descripcion: "Consulta y evaluación inicial",
  },
  {
    slug: "recina",
    nombre: "Recina",
    precio: "$50",
    imagen: "/images/recina.webp",
    descripcion: "Relleno del color del diente para caries",
  },
  {
    slug: "ortodoncia",
    nombre: "Ortodoncia",
    precio: "$650",
    imagen: "/images/ortodoncia.webp",
    descripcion: "Corrección de alineación dental",
  },
  {
    slug: "periodoncia",
    nombre: "Periodoncia",
    precio: "$400",
    imagen: "/images/perio.webp",
    descripcion: "Tratamiento de encías y soporte dental",
  },
];
---

<Layout
  title="Tratamientos Dentales"
  description="Conoce nuestros tratamientos dentales"
>
  <Navbar />

  <main class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center text-green-600 mb-4">
      Nuestros Tratamientos Dentales
    </h1>
    <p class="text-xl text-center text-gray-600 mb-12">
      Calidad y experiencia al cuidado de tu sonrisa
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        tratamientos.map((tratamiento) => (
          <a
            href={`/tratamientos/${tratamiento.slug}`}
            class="bg-white rounded-xl shadow-md overflow-hidden tratamiento-card transition duration-300 hover:transform hover:-translate-y-1"
          >
            <div class="p-6">
              <img
                transition:name={tratamiento.nombre}
                src={tratamiento.imagen}
                alt={tratamiento.nombre}
                width="200"
                height="200"
                class="mx-auto h-40 object-contain mb-4"
                loading="lazy"
              />
              <div class="text-center">
                <h2 class="text-xl font-bold text-green-600 mb-2">
                  {tratamiento.nombre}
                </h2>
                <p class="text-lg font-semibold text-gray-800 mb-3">
                  {tratamiento.precio}
                </p>
                <p class="text-gray-600 mb-4">{tratamiento.descripcion}</p>
                <button class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-6 rounded-lg transition duration-300">
                  Ver detalles
                </button>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <section class="mt-16 bg-green-50 rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold text-green-700 mb-4">
        ¿No encuentras lo que buscas?
      </h2>
      <p class="text-gray-700 mb-6">
        Contáctanos para una evaluación personalizada
      </p>
      <a
        href="/contacto"
        class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-300"
      >
        Agendar cita
      </a>
    </section>
  </main>
</Layout>
